
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>权限信息</title>
    <link href="~/Content/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/Content/themes/icon.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.easyui.min.js"></script>
    <script src="~/Scripts/easyui-lang-zh_CN.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/datapattern.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#addDiv").css("display", "none");
            loadData();
            bindActionTypeChange();
        });
        function loadData() {
            $('#tt').datagrid({
                url: '/ActionInfo/GetActionInfo',
                title: '权限数据表格',
                width: 700,
                height: 400,
                fitColumns: true, //列自适应
                nowrap: false,
                idField: 'ID',//主键列的列明
                loadMsg: '正在加载权限的信息...',
                pagination: true,//是否有分页
                singleSelect: false,//是否单行选择
                pageSize: 5,//页大小，一页多少条数据
                pageNumber: 1,//当前页，默认的
                pageList: [5, 10, 15],
                queryParams: {},//往后台传递参数
                columns: [[//c.UserName, c.UserPass, c.Email, c.RegTime
                    { field: 'ck', checkbox: true, align: 'left', width: 50 },
                    { field: 'ID', title: '编号', width: 80 },
                    { field: 'ActionInfoName', title: '权限名称', width: 120 },
                    {
                        field: 'ActionTypeEnum', title: '权限类型', width: 120,
                        formatter: function (value, row, index) {
                            return value == "1" ? "菜单权限" : "普通权限";
                        }
                    },
                    { field: 'Remark', title: '备注', width: 120 },
                    { field: 'Url', title: 'Url', width: 120 },
                    { field: 'Sort', title: '排序', width: 120 },
                    { field: 'HttpMethod', title: 'HttpMethod', width: 120 },
                    {
                        field: 'SubTime', title: '时间', width: 80, align: 'right',
                        formatter: function (value, row, index) {
                            return (eval(value.replace(/\/Date\((\d+)\)\//gi, "new Date($1)"))).pattern("yyyy-M-d");
                        }
                    },
                    {
                        field: 'showDetail', title: '详细', width: 120,
                        formatter: function (value, row, index) {
                            var str = "<a href='javascript:void(0)' class='details' ids='" + row.ID + "'>详细</a>"
                            return str;
                        }
                    },
                ]],
                //载入成功以后促发
                onLoadSuccess: function (data) {
                    $(".details").click(function () {
                        alert($(this).attr("ids"));
                    });
                },
                toolbar: [{
                    id: 'btnDelete',
                    text: '删除',
                    iconCls: 'icon-remove',
                    handler: function () {

                    }

                }, {
                    id: 'btnAdd',
                    text: '添加',
                    iconCls: 'icon-add',
                    handler: function () {
                        addAction();
                    }
                }, {
                    id: 'btnEdit',
                    text: '编辑',
                    iconCls: 'icon-edit',
                    handler: function () {

                    }
                }
                ],
            });
        }

        //给权限类别下拉框绑定change事件
        function bindActionTypeChange() {
            $("#actionTypeChange").change(function () {
                if ($(this).value == "1") {//菜单权限
                    $("#trIcon").fadeIn();
                } else {
                    $("#trIcon").fadeOut();
                }
            });
        }
        //添加权限
        function addAction() {
            $("#addDiv").css("display", "none");
            $('#addDiv').dialog({
                title: "添加权限信息",
                collapsible: true,
                maximizable: true,
                resizable: true,
                modal: true,
                width: 300,
                height: 400,
                buttons: [{
                    text: 'Ok',
                    iconCls: 'icon-ok',
                    handler: function () {
                        //在主窗体中调用子窗体的方法
                        var childWindow = $("#addFrame").get(0).contentWindow; //获得子窗体的window对象
                        childWindow.subForm();  //调用子窗体的方法

                    }
                }, {
                    text: 'Cancel',
                    handler: function () {
                        $('#addDiv').dialog('close');
                        $('#addDiv input').val("");
                    }
                }]
            });
        }
    </script>
</head>
<body>
    <div>
        <table id="tt" style="width: 700px;" title="标题，可以使用代码进行初始化，也可以使用这种属性的方式" iconcls="icon-edit"></table>
    </div>
    <div id="addDiv">
        <table>
            <tr><td>权限名称</td><td><input type="text" name="ActionInfoName" /></td></tr>
            <tr><td>Url</td><td><input type="text" name="Url" /></td></tr>
            <tr>
                <td>HttpMethod</td>
                <td>
                    <select name="HttpMethod">
                        <option value="GET">Get</option>
                        <option value="POST">Post</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td>权限类型</td>
                <td>
                    <select name="ActionTypeEnum" id="actionTypeChange">
                        <option value="0">普通权限</option>
                        <option value="1">菜单权限</option>
                    </select>
                </td>
            </tr>
            <tr style="display:none" id="trIcon">
                <td>上传图标</td>
                <td>
                    <input type="file" name="fileUp" />
                    <input type="button" value="上传" id="btnFileUp" />
                    <div id="showImg">

                    </div>
                </td>
            </tr>
            <tr><td>备注</td><td><input type="text" name="Remark" /></td></tr>
            <tr><td>排序</td><td><input type="text" name="Sort" /></td></tr>
        </table>
    </div>
</body>
</html>
